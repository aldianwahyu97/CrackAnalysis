<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".analisacita">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Nama Bangunan"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000"
            />

        <EditText
            android:id="@+id/namabangunan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            >
            <ImageView
                android:id="@+id/poto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/kamera"
                />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/ambilgambar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:text="ambil gambar"
            android:background="@drawable/tombolanalisa"
            android:textColor="#FFFF"
            />

        <Button
            android:id="@+id/analisagambar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Analisa Retakan"
            android:background="@drawable/tomboltentang"
            android:textColor="#FFFF"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                >

                <TextView
                    android:id="@+id/tekshasilanalisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hasil Analisa"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:layout_marginTop="40dp"
                    />
                <TextView
                    android:id="@+id/teksaksianalisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aksi"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginTop="75dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>